<resources>

    <style name="publishDialogAnim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/li_home_dialog_alpha_int</item>
        <item name="@android:windowExitAnimation">@anim/li_home_dialog_alpha_out</item>
    </style>

    <style name="RecordDialogAnim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/li_home_dialog_alpha_int_record</item>
        <item name="@android:windowExitAnimation">@anim/li_home_dialog_alpha_out_record</item>
    </style>
    <style name="RecordDialog" parent="android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/RecordDialogAnim</item>
        <!--<item name="android:backgroundDimEnabled">true</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>


</resources>