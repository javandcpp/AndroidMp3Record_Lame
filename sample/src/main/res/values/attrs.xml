    <declare-styleable name="EaseTitleBar">
        <attr name="titleBarTitle" format="string"/>
        <attr name="titleBarLeftImage" format="reference"/>
        <attr name="titleBarRightImage" format="reference"/>
        <attr name="titleBarBackground" format="reference|color"/>
        <attr name="titleBarRightText" format="string"></attr>
    </declare-styleable>

    <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>

    <declare-styleable name="CirecleView">
        <attr name="bg_color" format="color"/>
        <attr name="radius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="WaveLine">
        <attr name="line_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="InputMethodWidget">
        <attr name="input_mode">
            <enum name="comment" value="0"/>
            <enum name="reply" value="1"/>
        </attr>
    </declare-styleable>



</resources>